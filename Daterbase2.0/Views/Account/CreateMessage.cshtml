@model Daterbase2._0.Models.MessageViewModel

@{
    ViewBag.Title = "New Message";
}

<h2> @ViewBag.Title</h2>

@*@using (Html.BeginForm("CreateMessage", "Account", FormMethod.Post, new { @class = "form", role = "form" }))*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <hr />

    <div class="form-group">
        <div class="row">
        <div class="col-lg-2">
            @Html.LabelFor(m => m.RecipientName, new { @class = "control-label" })
        </div>    
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.RecipientName, new { @class = "form-control"})
        </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
        <div class="col-lg-2">
            @Html.LabelFor(m => m.Subject, new { @class = "control-label"})
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
        </div>
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(m => m.Subject, htmlAttributes: new { @class = "col-lg-1 control-label"})
        <div class="col-lg-11">
            @Html.TextBoxFor(m => m.Subject, new { HtmlAttributes = new { @class = "form-control" }})
        </div>
    </div>*@


    <div class="form-group">
        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.Contents, new { @class = "control-label" })
            </div>
            <div class="col-lg-10">
                @Html.TextAreaFor(m => m.Contents, new { @class = "form-control", rows = 20 })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <input type="submit" class="btn btn-default" value="Send Message!" />
        </div>
    </div>

